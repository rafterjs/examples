{
  "name": "@rafter/examples",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "bootstrap": "yarn install && lerna bootstrap",
    "prune": "lerna bootstrap --yarn-client=yarn -- --production && yarn install --production",
    "start:api": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 node examples/api/dist/index.js",
    "start:api:watch": "watch \"yarn start:api\" -i \"**/node_modules/*\" -i \"**/*spec*\" -i \"**/dist/*\"",
    "build": "lerna run build",
    "build:package": "lerna run build --scope",
    "build:api": "yarn run build:package @rafterjs/examples-api",
    "clean": "lerna run clean && lerna clean",
    "lint": "lerna run lint",
    "lint:fix": "lerna run lint -- --fix",
    "format": "yarn prettier && yarn lint:fix",
    "prettier": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "cross-env NODE_TLS_REJECT_UNAUTHORIZED=0 jest --collectCoverage --config=./jest.config.js"
  },
  "devDependencies": {
    "@babel/cli": "7.13.10",
    "@babel/core": "7.13.10",
    "@rafterjs/babel-preset-rafter": "0.7.1",
    "@rafterjs/eslint-config": "0.7.1",
    "@rafterjs/watcher": "0.7.1",
    "@types/express": "4.17.11",
    "@types/express-serve-static-core": "4.17.19",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.35",
    "@typescript-eslint/eslint-plugin": "4.18.0",
    "@typescript-eslint/parser": "4.18.0",
    "babel-jest": "26.6.3",
    "cross-env": "7.0.3",
    "dotenv-extended": "2.9.0",
    "eslint": "7.22.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-prettier": "3.3.1",
    "jest": "26.6.3",
    "lerna": "4.0.0",
    "prettier": "2.2.1",
    "ts-jest": "26.5.3",
    "ts-sinon": "2.0.1",
    "typescript": "4.2.3"
  }
}
